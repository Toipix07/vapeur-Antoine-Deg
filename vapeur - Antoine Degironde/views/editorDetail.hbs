{{> header }}

<main>
    <h1>Détails de l'Éditeur</h1>

    <h2>{{editor.name}}</h2>

    <h3>Jeux associés</h3>
    <ul>
        {{#each editor.games}}
            <li>{{this.title}}</li>
        {{/each}}
    </ul>

    <!-- Bouton pour supprimer l'éditeur -->
    <form action="/editors/{{editor.id}}/delete" method="POST" style="display:inline;">
        <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet éditeur ?')">Supprimer l'éditeur</button>
    </form>

    <!-- Bouton pour modifier l'éditeur -->
    <a href="/editors/{{editor.id}}/edit"><button>Modifier l'éditeur</button></a>

</main>

{{> footer }}
