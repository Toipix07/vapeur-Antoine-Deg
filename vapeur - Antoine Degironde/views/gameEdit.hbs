{{> header }}

<main>
    <h1>Modifier le jeu : {{game.title}}</h1>
    <form action="/games/{{game.id}}/edit" method="POST">
        <label for="title">Titre :</label>
        <input type="text" id="title" name="title" value="{{game.title}}" required>

        <label for="description">Description :</label>
        <textarea id="description" name="description" required>{{game.description}}</textarea>

        <label for="releaseDate">Date de sortie :</label>
        <input type="date" id="releaseDate" name="releaseDate" value="{{formatDate game.releaseDate}}" required>

        <label for="genreId">Genre :</label>
        <select id="genreId" name="genreId" required>
            {{#each genres}}
                <option value="{{this.id}}" {{#ifEquals this.id game.genre.id}}selected{{/ifEquals}}>
                    {{this.name}}
                </option>
            {{/each}}
        </select>

        <label for="editorId">Éditeur :</label>
        <select id="editorId" name="editorId" required>
            {{#each editors}}
                <option value="{{this.id}}" {{#ifEquals this.id game.editor.id}}selected{{/ifEquals}}>
                    {{this.name}}
                </option>
            {{/each}}
        </select>

        <button type="submit">Mettre à jour</button>
    </form>
</main>

{{> footer }}
